{
  "_comment": "What this file is: Stylelint configuration template for CSS/SCSS. Edit by Design Lead or CSS Owner; update when style rules change; approvals: Design Lead.",
  "extends": "stylelint-config-standard",
  "rules": {
    "color-hex-case": "lower",
    "declaration-no-important": true,
    "block-no-empty": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "tailwind",
          "apply",
          "screen",
          "function",
          "if",
          "each",
          "include",
          "mixin"
        ]
      }
    ]
  }
}

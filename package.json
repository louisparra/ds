{
  "_comment": "UPDATE: ensure lint & format checks fail in CI and locally. Edit by maintainers; approvals: Eng Lead.",
  "name": "design-system-template",
  "version": "0.0.0",
  "description": "Template repo for a production-ready design system (tokens, components, docs, CI).",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "bootstrap": "npm ci",
    "build:packages": "bash scripts/build-packages.sh",
    "test": "echo \"No tests configured yet\" && exit 0",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "format": "prettier --write \"**/*.{js,json,md,css,scss,html,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css,scss,html,mdx}\"",
    "build": "echo \"No root build configured\"",
    "create-release-draft": "node scripts/create-release-draft.js --help",
    "token-validate": "node scripts/token-validate.js",
    "build-storybook": "node scripts/build-storybook.js",
    "build-tokens": "node scripts/build-tokens.js",
    "build-tokens:sd": "node scripts/build-tokens-sd.js",
    "publish-packages": "bash scripts/publish-packages.sh"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.12.0",
    "style-dictionary": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "eslint": "^8.45.0",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,mdx}": [
      "prettier --write"
    ]
  }
}
